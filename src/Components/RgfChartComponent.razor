@using Microsoft.AspNetCore.Components.Forms

@if (_showComponent)
{
    <EditForm EditContext="@_emptyEditContext">
        @_chartDialog
    </EditForm>
}

<RgfDynamicDialog @ref="_dynamicDialog" />

@code {

    [Parameter, EditorRequired]
    public RgfEntityParameters EntityParameters { get; set; } = null!;

    [Parameter, EditorRequired]
    public RenderFragment<RgfChartComponent> ChartTemplate { get; set; } = null!;

    [Parameter, EditorRequired]
    public RenderFragment<RgfChartComponent> FooterTemplate { get; set; } = null!;
}